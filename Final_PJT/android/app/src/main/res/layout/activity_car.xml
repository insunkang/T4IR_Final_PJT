<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/sliding_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".car.Car">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/mBlack">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:clickable="true"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom|center"
            android:background="@color/mBlack">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round">
                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_weight="1">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ToggleButton
                                android:id="@+id/car_lock"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:checked="false"
                                android:text="false"
                                android:background="@drawable/car_lock_toggle"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageButton
                                android:id="@+id/car_air"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:background="@color/white"/>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/car_handle_img"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:layout_weight="1">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageButton
                                android:id="@+id/car_navi"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:background="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageButton
                                android:id="@+id/car_seat"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:background="@color/white"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>